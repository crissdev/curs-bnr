{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
